extends layout

block content
  .container.mt-4
    h1 Contact Us
    p We would love to hear from you! Please fill out the form below and we will get in touch with you shortly.
    form(action='/contact', method='POST')
      .form-group
        label(for='name') Name
        input.form-control#name(type='text', name='name', required=true)
      .form-group
        label(for='email') Email
        input.form-control#email(type='email', name='email', required=true)
      .form-group
        label(for='message') Message
        textarea.form-control#message(name='message', rows='5', required=true)
      button.btn.btn-primary(type='submit') Submit
